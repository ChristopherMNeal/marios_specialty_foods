<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name, "Product" %>
  <%= f.text_field :name %>
  <%= f.label :country_of_origin, "Planet of Origin" %>
  <%= f.text_field :country_of_origin %>
  <%= f.label :cost, "Cost in Imperial Solari â˜¼" %>
  <%= f.number_field :cost, in: 0..999999.99, step: 0.01 %>
  <%= f.label :featured, "Product is featured?" %>
  <%= f.check_box :featured %>
  
  <%= f.submit %>
<% end %>