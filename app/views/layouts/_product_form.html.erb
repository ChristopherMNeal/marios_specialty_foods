<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name, "Product" %>
  <%= f.text_field :name %>
  <%= f.label :country_of_origin, "Country of Origin" %>
  <%= f.text_field :country_of_origin %>
  <%= f.label :cost, "Cost" %>
  <%= f.number_field :cost, in: 1.00..9999.00, step: 0.01 %>
  <%= f.submit %>
<% end %>